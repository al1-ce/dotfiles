[user]
	email = al1-ce@list.ru
	name = al1-ce
[init]
	defaultBranch = master
	; templatedir = /home/al1-ce/.git-templates
[safe]
	directory = /g/AtheOS
	directory = /g/godot-dlang
	directory = /g/confed
	directory = /g/aur/confed
[core]
    pager = delta
	filemode = false

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    navigate = true
    light = false
    features = unobtrusive-line-numbers decorations
    whitespace-error-style = 22 reverse
    line-numbers = true
    side-by-side = true
    syntax-theme = gruvbox-dark
    plus-style = syntax "#222f22"
    minus-style = syntax "#2f2222"

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol box
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue ol ul
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax

    file-decoration-style = none

[delta "unobtrusive-line-numbers"]
    line-numbers = true
    line-numbers-minus-style = "#444444"
    line-numbers-zero-style = "#444444"
    line-numbers-plus-style = "#444444"
    line-numbers-left-format = "{nm:>4}┊"
    line-numbers-right-format = "{np:>4}│"
    line-numbers-left-style = blue
    line-numbers-right-style = blue
[push]
	autoSetupRemote = true
